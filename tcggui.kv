BoxLayoutSample:

<BoxLayoutSample>:
    orientation: "horizontal"
    BoxLayout:
        size_hint: .25, 1
        spacing: "10dp"
        orientation: "vertical"
        Label:
            text: "Temporary App"
        Button:
            text: "Option 1"
        Button:
            text: "Option 2"
        Button:
            text: "Option 3"

    # Button:
        # text: "2"
        # size: "60dp", "60dp"
        # size_hint: None, None
        # possible pos hint options  
        # x, center_x, right 
        # y, center_y, top
        # values should be from 0 -> 1
        # pos_hint: {"center_x": .5}

    AnchorLayout
        # anchor positioning options [anchor_x, anchor_y]
        # anchor positioning values [right, left, center]
        BoxLayout:
            orientation: "horizontal"
            Label:
                size_hint: .25, 1
                text: "3"
            Button:
                size_hint: .25, 1
                text: "Info 1"
            Button:
                size_hint: .25, 1
                text: "Info 2"
            Button:
                text: "Info 3"
                size_hint: .25, 1

    GridLayout:
        rows: 2
        cols: 2
        Button:
            text: "Info 3"
            size_hint: .25, 1
        Button:
            text: "Info 3"
            size_hint: .25, 1
        Button:
            text: "Info 3"
            size_hint: .25, 1
        Button:
            text: "Info 3"
            size_hint: .25, 1
        Button:
            text: "Info 3"
            size_hint: .25, 1

   

<MainWidget>:
    Button:
        text: "temp"
        size: "20dp", "40dp"
